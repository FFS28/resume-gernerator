{% set active_route = app.request.attributes.get('_route') | default('app_index') %}
{% set active_params = app.request.attributes.get('_route_params') | default([]) %}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}
    {{ 'Timeline' | trans }}
{% endblock %}

{% block main %}
    <div id="timeline">
        <div class="row month">
            <div></div>
            {% for m in months %}
                <div class="month">
                    {{ m }}
                </div>
            {% endfor %}
        </div>
        {% for y, year in timeline %}
            <div class="row year">
                <div class="year">{{ y }}</div>
                {% for m, month in year %}
                    <div class="month {% if month | length > 0 %}month-value{% endif %}">
                        {% for experience in month %}
                            <div>{{ experience.company }}</div>
                        {% endfor %}
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
    </div>
{% endblock %}

